{
    "name": "SIAPI/SIAPI",
    "description": "Space Images API",
    "minimum-stability": "stable",
    "license": "GPL",
    "authors": [
        {
            "name": "Mickael Vieira",
            "email": "contact@mickael-vieira.com"
        }
    ],
    "require": {
        "php": "~5.4",
        "ruflin/Elastica": "dev-master"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "phpspec/nyan-formatters": "1.*",
        "henrikbjorn/phpspec-code-coverage": "~0.2",
        "squizlabs/php_codesniffer": "1.*",
        "phpmd/phpmd" : "2.0.*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "": "src"
